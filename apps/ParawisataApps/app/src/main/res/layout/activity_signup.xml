<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="38dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="SIGNUP"
                    android:textColor="#47525E"
                    android:textSize="19pt"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Daftarkan satu akun untuk akses selamanya"
                    android:textSize="7pt"
                    android:textColor="#86909B"/>

                <EditText
                    android:id="@+id/edtNamaLengkap"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/style_edittext"
                    android:hint="Nama Lengkap"
                    android:inputType="text"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="7pt"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:drawableRight="@drawable/ic_fullname"/>

                <EditText
                    android:id="@+id/edtJenisKelamin"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/style_edittext"
                    android:hint="Jenis Kelamin"
                    android:inputType="text"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="7pt"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:drawableRight="@drawable/ic_gender"/>

                <EditText
                    android:id="@+id/edtSetUsername"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/style_edittext"
                    android:hint="Atur Username"
                    android:inputType="text"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="7pt"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:drawableRight="@drawable/ic_username"/>

                <EditText
                    android:id="@+id/edtSetPassword"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/style_edittext"
                    android:hint="Atur Password"
                    android:inputType="textPassword"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="7pt"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:drawableRight="@drawable/ic_password"/>

                <EditText
                    android:id="@+id/edtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/style_edittext"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="7pt"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:drawableRight="@drawable/ic_confirm_password"/>

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/style_edittext"
                    android:hint="Atur Email"
                    android:inputType="textEmailAddress"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="7pt"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:drawableRight="@drawable/ic_mail"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:onClick="backtToSignin"
                        android:src="@drawable/ic_back"
                        android:background="@drawable/style_button_back"
                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="4dp"/>

                    <Button
                        android:id="@+id/btnProsesSignup"
                        android:textColor="#ffff"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="9pt"
                        android:background="@drawable/style_button_primary"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="DAFTARKAN SEKARANG"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>